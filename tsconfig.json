{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true
    },
    "files": [
        "index.ts"
    ]
}
